<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- שם המקום -->
        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם המקום"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"/>

        <!-- תאריך ויום -->
        <TextView
            android:id="@+id/tvHistoryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תאריך: 01/01/2024 (יום ראשון)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <!-- שעות -->
        <TextView
            android:id="@+id/tvHistoryTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שעות: 09:00 - 12:00  |  משך: 3.0 שעות"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <!-- סטטוס -->
        <TextView
            android:id="@+id/tvHistoryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סטטוס: מחכה לאישור"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:padding="8dp"
            android:background="@drawable/edittext_background"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>