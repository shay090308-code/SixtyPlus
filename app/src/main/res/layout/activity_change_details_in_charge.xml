<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_details_in_charge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/goBackInChargeChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:backgroundTint="@android:color/transparent"
                android:text="➜"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/changeInChargeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/galacti"
                android:shadowColor="@color/myyellow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="עדכון פרטים"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="242dp" />

            <TextView
                android:id="@+id/ChangeInChargerDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubiklight"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="עדכן את פרטיך במידת הצורך"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="363dp" />

            <!-- ID Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="תעודת זהות">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idNumberInChargeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:fontFamily="@font/gveretlevin"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="שם פרטי                                               ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameInChargeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="שם משפחה                                           ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameInChargeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="מספר טלפון                                           ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneInChargeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="עיר מקום ההתנדבות                                 ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cityInChargeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="שם מקום ההתנדבות                                 ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/placeNameChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="כתובת מקום ההתנדבות                             ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/placeAdressChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="תיאור על המקום">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/placeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="יום ראשון"
                android:fontFamily="@font/rubiklight"
                android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_sun_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_sun_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_sun_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_sun_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום שני" android:fontFamily="@font/rubiklight" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_mon_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_mon_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_mon_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_mon_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום שלישי" android:fontFamily="@font/rubiklight" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_tue_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_tue_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_tue_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_tue_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום רביעי" android:fontFamily="@font/rubiklight" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_wed_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_wed_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_wed_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_wed_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום חמישי" android:fontFamily="@font/rubiklight" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_thu_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_thu_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_thu_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_thu_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום שישי" android:fontFamily="@font/rubiklight" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_fri_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_fri_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_fri_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_fri_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום שבת" android:fontFamily="@font/rubiklight" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <Spinner android:id="@+id/spinner_sat_start_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_sat_start_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" עד " android:fontFamily="@font/rubiklight" />
                <Spinner android:id="@+id/spinner_sat_end_hourChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
                <Spinner android:id="@+id/spinner_sat_end_minChange" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/gveretlevin" />
            </LinearLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="סיסמא נוכחית">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nowPasswordInChargeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="סיסמא חדשה">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPasswordInCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="אימות סיסמא חדשה">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPasswordInChargeConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/saveChangesInChargeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/myyellow"
                android:fontFamily="@font/rubicblack"
                android:text="שמור שינויים"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                tools:layout_conversion_absoluteHeight="47dp"
                tools:layout_conversion_absoluteWidth="200dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
