<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_details_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/goBackStudentChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:backgroundTint="@android:color/transparent"
                android:text="➜"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/changeStudentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/galacti"
                android:shadowColor="@color/myyellow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="עדכון פרטים"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="242dp" />

            <TextView
                android:id="@+id/changeStudentDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubiklight"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="עדכן את פרטיך במידת הצורך"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="363dp" />

            <!-- ID Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="תעודת זהות">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idNumberStudentChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:fontFamily="@font/gveretlevin"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="שם פרטי                                               ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameStudentChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="שם משפחה                                           ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameStudentChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="מספר טלפון                                           ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneStudentChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- City -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="עיר מגורים                                            ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cityStudentChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- School Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="שם בית ספר                                          ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/schoolNameChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Grade Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="כיתה                                                   ✏️">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/gradeNameChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gveretlevin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="סיסמא נוכחית">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nowPasswordStudentChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="סיסמא חדשה">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPasswordStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                android:textColorHint="#999999"
                android:hint="אימות סיסמא חדשה">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPasswordStudentConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/gveretlevin"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/saveChangesStudentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/myyellow"
                android:fontFamily="@font/rubicblack"
                android:text="שמור שינויים"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                tools:layout_conversion_absoluteHeight="47dp"
                tools:layout_conversion_absoluteWidth="200dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
